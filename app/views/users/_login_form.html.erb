<%= form_for @user, :url => new_session_path(@user) do |f| %>
  <div class="field">
    <%= f.text_field :email, :placeholder => 'Email', :class => 'users-field' %>
  </div>
  <div class="field">
    <%= f.password_field :password, :placeholder => 'Password', :class => 'users-field' %>
  </div>
  <div class="actions">
    <%= f.submit 'Login', :class => 'submit' %>
  </div>
<% end %>
