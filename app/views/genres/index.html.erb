<h1>Genres</h1>

<table>
  <thead>
    <td>Category</td>
    <td>Movie Count</td>
  </thead>

<% @genres_movie_counts.each do |key, val| %>
  <tr>
    <td><%= link_to @genres[key].category, genre_show_path(@genres[key].id) %></td>
    <td><%= number_with_delimiter val %></td>
  </tr>
<% end %>
</table>
