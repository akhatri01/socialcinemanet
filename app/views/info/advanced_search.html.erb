<h2>Movie Person</h2>
<div class="movie-person-block">
	<input type="text" id="fname" placeholder="First Name">
	<input type="text" id="mname" placeholder="Middle Name">
	<input type="text" id="lname" placeholder="Last Name">
	<br />
	<label><input type="checkbox" value="actor" id="actor"> Actor?</label>
	<label><input type="checkbox" value="director" id="director"> Director?</label>
</div>
<%= link_to_function 'add person', "add_movie_person_block()" %>
<h2>Movie</h2>
<input type="text" id="movie_title" placeholder="Title">
<input type="text" id="movie_year" placeholder="Year">
<input type="text" id="imdb_rating" placeholder="IMDB Rating">
<br />
<h2>Genre</h2>
<input type="text" id="genre_category" placeholder="Category">
<br />
<input type="submit" id="advanced-search-submit" value="Search">